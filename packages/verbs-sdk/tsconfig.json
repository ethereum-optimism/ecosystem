{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2021",
    "lib": ["esnext"],
    "strict": true,
    "composite": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  }
}